<div class='course' id='<% course.id %>'>
	<%= image_tag course.image_url%>
  	<a href=<%= "#{course.provider}/#{course.slug}" %>><span class="text"><%= course.title%> <%= "(#{course.course_code})" if course.course_code != nil%></span></a>
	<%= course.average_rating %>
	<ul>
		<li class='home_nav_item'>Subject: <%= course.subject %></li>
		<li class='home_nav_item'>Source: <%= course.provider %></li>
		<li class='home_nav_item'>Description: <%= CGI.unescape(course.description) %></li>
	</ul>
</div>